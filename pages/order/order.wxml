<!--搜索区域-->
<view class="searchBar">
  <input name="search" type="text" placeholder="请输入场馆名" />
  <image src="/pages/images/sousuo.png" mode="widthFix"></image>
</view>
<!--轮播图区域-->
<swiper indicator-dots indicator-color="black" indicator-active-color="#35495D" autoplay interval="4000" duration="2000">
  <block wx:for="{{swiper}}">
    <swiper-item>
      <image src="{{item}}"></image>
    </swiper-item>
  </block>
</swiper>
